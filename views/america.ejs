<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <meta name="description" content="" />
    <title>American Cars</title>

    <link
      rel="canonical"
      href="https://getbootstrap.com/docs/4.5/examples/album/"
    />

    <!-- Bootstrap core CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />

    <link href="css/album.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('common/header'); -%>
<div class="container">
    
 <% if (message) {   %> 
  <div class="row justify-content-md-center">
    <div class="alert alert-primary" role="alert">
          <%= message %>
    </div>
  </div>
<% } %>

<h1 class="text-center"> American Cars  </h1>
<div class="col-md-12 col-md-offset-2  justify-content-center">

</div>
  
  <div class="col-md-12 col-md-offset-2">
  
    <table class="table table-striped custab">
    <thead>
        <tr>
            <th>Car Name</th>
            <th>Origin</th>
            <th>Brand</th>
            <th>Horsepower</th>
            <th>Cylinders</th>
            <th>Year Made</th>
            <th>Engine</th>
            <th>Electric</th>
            <% if(user) { %>
            <th></th>
            <% } %>

        </tr>

        <%  
        
          cars.forEach(car => {
            
        %>
            <tr>
                <td><%=  car.Car_name  %></td>
                <td><%=  car.Origin %></td>
                <td><%=  car.Brand  %></td> 
                <td><%=  car.Horsepower  %></td> 
                <td><%=  car.Cylinders  %></td> 
                <td><%=  car.Year_made  %></td> 
                <td><%=  car.Engine  %></td> 
                <td><%=  car.Electric  %></td> 
                <% if(user) { %>
                <td class="text-center"><a class='btn btn-info btn-xs' href="/american/update/<%= car.id %>" ><span class="glyphicon glyphicon-edit"></span> Edit</a> 
                  <a  href="/american/delete/<%= car.id %>" class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span> Delete</a></td>       
                  <% } %>
                </tr>
            
         <%  
          });
         %>


       
    </thead>
          
    </table>

     
    </div>
    
  
    <%- include('common/footer') -%>
  </body>
</html>